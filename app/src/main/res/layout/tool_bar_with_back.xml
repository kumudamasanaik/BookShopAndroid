<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ToolbarStyle"
    android:id="@+id/my_tool_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_38sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_tool_bar_image"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_19sdp"
            android:layout_gravity="start|center"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/ic_home_white_24dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_screen_title"
            style="@style/ToolbarTitleStyle"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2" />

        <FrameLayout
            android:id="@+id/cart_layout"
            style="?attr/actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:focusable="true">

            <ImageView
                android:id="@+id/ic_cart"
                style="@style/app_menu_icon_style"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_23sdp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="@dimen/_2sdp"
                app:srcCompat="@drawable/ic_cart_test" />

            <TextView
                android:id="@+id/cart_badge"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="end|top"
                android:layout_marginEnd="@dimen/_minus4sdp"
                android:background="@drawable/cart_badge_background"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:textSize="8sp" />
            <!--                android:text="2"
-->
        </FrameLayout>
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>