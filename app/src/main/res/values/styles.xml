<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="popupTheme">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:windowAnimationStyle">@null</item>

    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_cart_test</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="MyActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:popupBackground">@color/md_white_1000</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/md_white_1000</item>
    </style>

    <style name="MultiStateViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="msv_animateViewChanges">false</item>
        <item name="msv_emptyView">@layout/empty_view</item>
        <item name="msv_errorView">@layout/error_view</item>
        <item name="msv_loadingView">@layout/loading_view</item>
        <item name="msv_viewState">content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Common Styles -->
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">start</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="app_menu_icon_style">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>

    </style>

    <style name="AppTheme_Loading_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
        <item name="windowActionBar">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cardview_shop_by_cat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:focusable">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="image_view_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_notifications_black_24dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/md_white_10001</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="round_circle_product_image_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:src">@drawable/changepassword</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_outline_curve</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/md_grey_500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_colour_change</item>
       <!-- <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginEnd">20dp</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/md_grey_500</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="green_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_dark_green_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/md_grey_500</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="red_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_red_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/md_grey_500</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="recyclerView_vertical_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>

    </style>


    <style name="search_editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textColorHint">@color/grey_hint_color</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="search_iconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!--SEARCH VIEW STYLE-->
    <style name="searchview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="sign_up_forgot_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_light_blue</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
